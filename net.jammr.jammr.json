{
    "id": "net.jammr.jammr",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "jammr",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/share/man",
        "*.a",
        "*.la",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "portaudio",
            "config-opts": [
                "--disable-static",
                "--without-oss"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 10597,
                        "url-template": "http://files.portaudio.com/archives/pa_stable_v$version.tgz"
                    },
                    "type": "archive",
                    "url": "http://files.portaudio.com/archives/pa_stable_v190600_20161030.tgz",
                    "sha256": "f5a21d7dcd6ee84397446fa1fa1a0675bb2e8a4a6dceb4305a8404698d8d1513"
                }
            ]
        },
        {
            "name": "portmidi",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_LIBRARY_OUTPUT_DIRECTORY=/app/lib",
                "-DCMAKE_ARCHIVE_OUTPUT_DIRECTORY=/app/lib",
                "-DCMAKE_RUNTIME_OUTPUT_DIRECTORY=/app/bin"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/PortMidi/portmidi/releases/latest",
                        "tag-query": ".tag_name",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at"
                    },
                    "type": "git",
                    "url": "https://github.com/PortMidi/portmidi.git",
                    "tag": "v2.0.4",
                    "commit": "b808babecdc5d05205467dab5c1006c5ac0fdfd4"
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=lib",
                "-DCMAKE_LIBRARY_OUTPUT_DIRECTORY=/app/lib",
                "-DCMAKE_ARCHIVE_OUTPUT_DIRECTORY=/app/lib",
                "-DCMAKE_RUNTIME_OUTPUT_DIRECTORY=/app/bin",
                "-DBUILD_TRANSLATIONS=off"
            ],
            "modules": [
                "shared-modules/libsecret/libsecret.json"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/frankosterfeld/qtkeychain/releases/latest",
                        "tag-query": ".tag_name",
                        "version-query": ".name",
                        "timestamp-query": ".published_at"
                    },
                    "type": "git",
                    "url": "https://github.com/frankosterfeld/qtkeychain.git",
                    "tag": "v0.13.2",
                    "commit": "c236f9241e37f1754879cf8726d59351a2b2b24a"
                }
            ],
            "cleanup": [
                "/bin",
                "/mkspecs",
                "/lib/cmake"
            ]
        },
        {
            "name": "jammr",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=jammr",
                "CONFIG+=qtclient"
            ],
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^(?:jammr-)?(\\d+\\.\\d+\\.\\d+)$",
                        "version-scheme": "semantic"
                    },
                    "type": "git",
                    "url": "https://github.com/wahjam/wahjam.git",
                    "tag": "1.3.1",
                    "commit": "c1468239a261b8daf05c6c4d4ed199f2b2dc20a5"
                }
            ]
        }
    ]
}
